{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
